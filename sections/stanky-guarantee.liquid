<div class="stanky-guarantee page-width">
  <div class="guarantee-content">
    <div class="guarantee-heading">
      <h2 class="stanky-section-title h1">{{ section.settings.heading }}</h2>
    </div>
    <div class="guarantee-details">
      <div class="guarantee-text">
        <p class="body">{{ section.settings.description }}</p>
      </div>
      <ul class="guarantee-list">
        {% if section.settings.bullet_1 != blank %}
          <li>{{ section.settings.bullet_1 }}</li>
        {% endif %}
        {% if section.settings.bullet_2 != blank %}
          <li>{{ section.settings.bullet_2 }}</li>
        {% endif %}
        {% if section.settings.bullet_3 != blank %}
          <li>{{ section.settings.bullet_3 }}</li>
        {% endif %}
      </ul>
    </div>
  </div>
</div>

<style>
  .stanky-guarantee {
    padding: 6rem 0;
    background: var(--color-background-secondary, #f8f8f8);
  }

  .guarantee-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .guarantee-heading h2 {
    margin: 0;
  }

  .guarantee-text {
    margin-bottom: 2rem;
  }

  .guarantee-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .guarantee-list li {
    padding: 0.5rem 0;
    padding-left: 2rem;
    position: relative;
  }

  .guarantee-list li::before {
    content: "✓";
    position: absolute;
    left: 0;
    font-weight: bold;
    color: var(--color-accent, #000);
  }

  @media screen and (max-width: 989px) {
    .guarantee-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .guarantee-list li {
      text-align: left;
    }

    .stanky-guarantee {
      padding: 4rem 0;
    }
  }
</style>

{% schema %}
{
  "name": "Guarantee",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "30-DAY SATISFACTION GUARANTEE"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Try StankyPowder risk-free. If you're not completely satisfied, we'll refund your purchase—no questions asked."
    },
    {
      "type": "text",
      "id": "bullet_1",
      "label": "Bullet Point 1",
      "default": "Money Back Guarantee"
    },
    {
      "type": "text",
      "id": "bullet_2",
      "label": "Bullet Point 2",
      "default": "Free Shipping on Orders over $50"
    },
    {
      "type": "text",
      "id": "bullet_3",
      "label": "Bullet Point 3",
      "default": "Nothing to lose (other than stubborn stains)"
    }
  ],
  "presets": [
    {
      "name": "Guarantee"
    }
  ]
}
{% endschema %}
